<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FinalProject" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/goldie</item>
        <item name="colorOnPrimary">@color/md_white_1000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_teal_300</item>
        <item name="colorSecondaryVariant">@color/md_teal_700</item>
        <item name="colorOnSecondary">@color/md_black_1000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/goldie</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->

        <item name="windowActionBar">true</item>
    </style>

</resources>