<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.RegisterFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gradien">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_top"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/cream"
            android:minHeight="?android:attr/actionBarSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/nunito_bold"
                android:text="@string/register"
                android:textColor="@color/darkBrown"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/space_60"
            android:layout_height="@dimen/space_60"
            android:layout_marginTop="@dimen/space_100"
            android:src="@drawable/ic_lotus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_masuk_accoun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="185dp"
            android:fontFamily="@font/nunito_semi_bold"
            android:text="@string/buat_akun"
            android:textColor="@color/textBlack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="206dp"
            android:fontFamily="@font/nunito"
            android:text="@string/info_register"
            android:textColor="@color/textBlack"
            android:textSize="9sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SmallSp" />


        <View
            android:id="@+id/constrain"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="274dp"
            android:layout_marginBottom="@dimen/space_20"
            android:alpha="0.1"
            android:background="@drawable/bg_rounded_card_shadow"
            android:fadingEdge="vertical"
            android:fadingEdgeLength="@dimen/space_20"
            app:cardCornerRadius="@dimen/space_16"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_info"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constrain_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="278dp"
            android:paddingBottom="@dimen/space_24"
            android:background="@drawable/bg_rounded_card_view"
            app:cardCornerRadius="@dimen/space_16"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_info"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/appCompatImageButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_36"
                android:layout_marginHorizontal="@dimen/space_16"
                android:layout_marginTop="@dimen/space_20"
                android:background="@drawable/item_google"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SmallSp" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_1"
                android:layout_marginHorizontal="@dimen/space_16"
                android:layout_marginTop="@dimen/space_28"
                android:background="#C4C4C4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appCompatImageButton" />

            <View
                android:layout_width="@dimen/space_40"
                android:layout_height="@dimen/space_40"
                android:background="@color/md_white_1000"
                app:layout_constraintBottom_toBottomOf="@+id/view2"
                app:layout_constraintEnd_toEndOf="@+id/view2"
                app:layout_constraintStart_toStartOf="@+id/view2"
                app:layout_constraintTop_toTopOf="@+id/view2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Atau"
                app:layout_constraintBottom_toBottomOf="@+id/view2"
                app:layout_constraintEnd_toEndOf="@+id/view2"
                app:layout_constraintStart_toStartOf="@+id/view2"
                app:layout_constraintTop_toTopOf="@+id/view2" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@+id/appCompatImageButton"
                app:layout_constraintEnd_toEndOf="@+id/appCompatImageButton"
                app:layout_constraintStart_toStartOf="@+id/appCompatImageButton"
                app:layout_constraintTop_toTopOf="@+id/appCompatImageButton">


                <ImageView
                    android:layout_width="@dimen/space_16"
                    android:layout_height="@dimen/space_16"
                    android:layout_marginHorizontal="@dimen/space_8"
                    android:src="@drawable/img_google" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/space_8"
                    android:fontFamily="@font/nunito"
                    android:includeFontPadding="false"
                    android:text="@string/masuk_dengan_akun_google"
                    android:textAllCaps="false"
                    android:textColor="@color/textBlack"
                    android:textSize="10sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16"
                android:layout_marginTop="100dp"
                android:fontFamily="@font/nunito_semi_bold"
                android:text="@string/name"
                android:textColor="@color/textBlack"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SmallSp" />

            <EditText
                android:id="@+id/edtName"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="@dimen/space_16"
                android:layout_marginStart="16dp"
                android:layout_marginTop="@dimen/space_8"
                android:textColor="@color/textBlack"
                android:textColorHint="@color/textGrey"
                android:layout_marginEnd="16dp"
                android:background="@drawable/item_rounded_edt"
                android:hint="@string/name"
                android:paddingHorizontal="@dimen/space_16"
                android:textSize="9sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvName"
                tools:ignore="SmallSp"
                android:inputType="textPersonName"/>

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16"
                android:layout_marginTop="10dp"
                android:textColor="@color/textBlack"
                android:textColorHint="@color/textGrey"
                android:fontFamily="@font/nunito_semi_bold"
                android:text="@string/email"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edtName"
                tools:ignore="SmallSp" />

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="@dimen/space_16"
                android:layout_marginStart="16dp"
                android:layout_marginTop="@dimen/space_8"
                android:layout_marginEnd="16dp"
                android:textColor="@color/textBlack"
                android:textColorHint="@color/textGrey"
                android:background="@drawable/item_rounded_edt"
                android:hint="@string/alamat_email"
                android:paddingHorizontal="@dimen/space_16"
                android:textSize="9sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvEmail"
                tools:ignore="SmallSp"
                android:inputType="textEmailAddress"/>


            <TextView
                android:id="@+id/tv_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16"
                android:layout_marginTop="@dimen/space_12"
                android:fontFamily="@font/nunito_semi_bold"
                android:text="@string/password"
                android:textColor="@color/textBlack"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtEmail"
                tools:ignore="SmallSp" />

            <EditText
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginHorizontal="@dimen/space_16"
                android:layout_marginTop="@dimen/space_8"
                android:background="@drawable/item_rounded_edt"
                android:hint="@string/password"
                android:textColor="@color/textBlack"
                android:textColorHint="@color/textGrey"
                android:paddingHorizontal="@dimen/space_16"
                android:textSize="9sp"
                app:layout_constraintTop_toBottomOf="@+id/tv_password"
                tools:ignore="SmallSp"
                android:inputType="textPassword"/>

            <TextView
                android:id="@+id/tv_confirm_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16"
                android:layout_marginTop="@dimen/space_12"
                android:fontFamily="@font/nunito_semi_bold"
                android:text="@string/confirm_password"
                android:textColor="@color/textBlack"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_password"
                tools:ignore="SmallSp" />

            <EditText
                android:id="@+id/edt_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginHorizontal="@dimen/space_16"
                android:layout_marginTop="@dimen/space_8"
                android:background="@drawable/item_rounded_edt"
                android:hint="@string/confirm_password"
                android:paddingHorizontal="@dimen/space_16"
                android:textSize="9sp"
                app:layout_constraintTop_toBottomOf="@+id/tv_confirm_password"
                tools:ignore="SmallSp"
                android:inputType="textPassword"/>

            <Button
                android:id="@+id/btn_daftar"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_rounded_login"
                android:text="@string/daftar"
                android:textAllCaps="false"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_confirm_password" />

            <TextView
                android:id="@+id/tv_description_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="@string/description_register"
                android:textAlignment="center"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_daftar" />

            <TextView
                android:id="@+id/tv_description_register2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/space_12"
                android:text="@string/description_register2"
                android:textAlignment="center"
                android:textColor="@color/darkBrown"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_description_register" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/cream"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constrain_register">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito"
                android:text="@string/sudah_memiliki_akun"
                android:textColor="@color/textBlack"
                android:textAlignment="center"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_8"
                android:fontFamily="@font/nunito"
                android:text="@string/masuk"
                android:textColor="@color/darkBrown"
                android:textSize="11sp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>