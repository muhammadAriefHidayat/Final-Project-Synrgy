<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/space_8">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_perawatan_kulit"
        android:layout_width="159dp"
        android:layout_height="153dp"
        android:layout_margin="@dimen/space_6"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/imageView2">

            <ImageView
                android:id="@+id/im_perawatan_kulit"
                android:layout_width="0dp"
                android:layout_height="@dimen/space_90"
                android:scaleType="centerCrop"
                android:src="@drawable/article_perawatan_kulit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_perawatan_kulit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_8"
                android:layout_marginTop="@dimen/space_6"
                android:fontFamily="@font/nunito"
                android:text="@string/perawatan_kulit"
                android:textColor="@color/darkBrown"
                android:textSize="7sp"
                app:layout_constraintStart_toStartOf="@+id/im_perawatan_kulit"
                app:layout_constraintTop_toBottomOf="@+id/im_perawatan_kulit" />

            <TextView
                android:id="@+id/tv_penjelasan_perawatan_kulit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_8"
                android:layout_marginEnd="@dimen/space_8"
                android:ellipsize="end"
                android:fontFamily="@font/nunito_semi_bold"
                android:maxLines="2"
                android:text="@string/isi_artikel"
                android:textColor="@color/textBlack"
                android:textSize="9sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/im_perawatan_kulit"
                app:layout_constraintTop_toBottomOf="@+id/tv_perawatan_kulit" />

            <TextView
                android:id="@+id/tv_waktu_artikel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_8"
                android:layout_marginBottom="@dimen/space_8"
                android:fontFamily="@font/nunito_bold"
                android:text="@string/datetime"
                android:textColor="#C4C4C4"
                android:textSize="7sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>