<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_perawatan_kulit"
        app:cardElevation="8dp"
        android:layout_margin="4dp"
        android:layout_width="0dp"
        android:layout_height="230dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/imageView2">

            <ImageView
                android:id="@+id/im_perawatan_kulit"
                android:layout_width="0dp"
                android:layout_height="115dp"
                android:layout_marginHorizontal="6dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:src="@drawable/article_perawatan_kulit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_perawatan_kulit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito"
                android:text="@string/perawatan_kulit"
                android:textColor="@color/darkBrown"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/im_perawatan_kulit"
                app:layout_constraintTop_toBottomOf="@+id/im_perawatan_kulit" />

            <TextView
                android:id="@+id/tv_penjelasan_perawatan_kulit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/isi_artikel"
                android:textColor="@color/textBlack"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="@+id/im_perawatan_kulit"
                app:layout_constraintStart_toStartOf="@+id/im_perawatan_kulit"
                app:layout_constraintTop_toBottomOf="@+id/tv_perawatan_kulit" />

            <TextView
                android:id="@+id/tv_waktu_artikel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_bold"
                android:text="@string/datetime"
                android:textColor="@color/textBlack"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_penjelasan_perawatan_kulit" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
