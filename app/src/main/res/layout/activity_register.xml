<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_top"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/cream"
            android:minHeight="?android:attr/actionBarSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/nunito_bold"
                android:text="@string/register"
                android:textColor="@color/darkBrown"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/space_60"
            android:layout_height="@dimen/space_60"
            android:layout_marginTop="@dimen/space_100"
            android:src="@drawable/ic_lotus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_masuk_accoun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="185dp"
            android:fontFamily="@font/nunito_semi_bold"
            android:text="@string/buat_akun"
            android:textColor="@color/textBlack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="206dp"
            android:fontFamily="@font/nunito"
            android:text="@string/info_register"
            android:textColor="@color/textBlack"
            android:textSize="9sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SmallSp" />


        <View
            android:id="@+id/constrain"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="274dp"
            android:layout_marginBottom="@dimen/space_20"
            android:alpha="0.1"
            android:background="@drawable/bg_rounded_card_shadow"
            android:fadingEdge="vertical"
            android:fadingEdgeLength="@dimen/space_20"
            app:cardCornerRadius="@dimen/space_16"
            app:layout_constraintBottom_toTopOf="@+id/view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_info"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constrain_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="278dp"
            android:background="@drawable/bg_rounded_card_view"
            app:cardCornerRadius="@dimen/space_16"
            app:layout_constraintBottom_toTopOf="@+id/view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_info"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16"
                android:layout_marginTop="100dp"
                android:fontFamily="@font/nunito_semi_bold"
                android:text="@string/name"
                android:textColor="@color/textBlack"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SmallSp" />

            <EditText
                android:id="@+id/edtName"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="@dimen/space_16"
                android:layout_marginStart="16dp"
                android:layout_marginTop="@dimen/space_8"
                android:layout_marginEnd="16dp"
                android:background="@drawable/item_rounded_edt"
                android:hint="@string/name"
                android:paddingHorizontal="@dimen/space_16"
                android:textSize="9sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvName"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_semi_bold"
                android:text="@string/email"
                android:textColor="@color/textBlack"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edtName"
                tools:ignore="SmallSp" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="@dimen/space_16"
                android:layout_marginStart="16dp"
                android:layout_marginTop="@dimen/space_8"
                android:layout_marginEnd="16dp"
                android:background="@drawable/item_rounded_edt"
                android:hint="@string/alamat_email"
                android:paddingHorizontal="@dimen/space_16"
                android:textSize="9sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvEmail"
                tools:ignore="SmallSp" />


            <TextView
                android:id="@+id/tv_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16"
                android:layout_marginTop="@dimen/space_12"
                android:fontFamily="@font/nunito_semi_bold"
                android:text="@string/password"
                android:textColor="@color/textBlack"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editText"
                tools:ignore="SmallSp" />

            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginHorizontal="@dimen/space_16"
                android:layout_marginTop="@dimen/space_8"
                android:background="@drawable/item_rounded_edt"
                android:hint="@string/alamat_email"
                android:paddingHorizontal="@dimen/space_16"
                android:textSize="9sp"
                app:layout_constraintTop_toBottomOf="@+id/tv_password"
                tools:ignore="SmallSp" />

            <Button
                android:id="@+id/btn_daftar"
                android:layout_width="380dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_rounded_login"
                android:text="@string/daftar"
                android:textAllCaps="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_email" />

            <TextView
                android:id="@+id/tv_description_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:textAlignment="center"
                android:text="@string/description_register"
                app:layout_constraintTop_toBottomOf="@id/btn_daftar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_description_register2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:text="@string/description_register2"
                android:textColor="@color/darkBrown"
                app:layout_constraintTop_toBottomOf="@id/tv_description_register"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="@dimen/space_56"
        android:background="@color/cream"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constrain_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constrain_login">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:text="@string/sudah_memiliki_akun"
            android:textColor="@color/textBlack"
            android:textSize="11sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_8"
            android:fontFamily="@font/nunito"
            android:text="@string/masuk"
            android:textColor="@color/darkBrown"
            android:textSize="11sp" />
    </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>