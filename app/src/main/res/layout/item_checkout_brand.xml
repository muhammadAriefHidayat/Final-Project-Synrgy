<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/space_4"
    android:layout_marginTop="@dimen/space_4"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_Brand_checkout_adapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_16"
        android:fontFamily="@font/nunito"
        android:text="WARDAH"
        android:textColor="@color/darkBrown"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_chekcout_adapter_var"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_5"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Brand_checkout_adapter"
        tools:itemCount="3"
        tools:listitem="@layout/item_produk" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginHorizontal="@dimen/space_16"
        android:layout_marginTop="10dp"
        android:background="@color/darkBrown"
        app:layout_constraintTop_toBottomOf="@id/rv_chekcout_adapter_var"/>
</androidx.constraintlayout.widget.ConstraintLayout>