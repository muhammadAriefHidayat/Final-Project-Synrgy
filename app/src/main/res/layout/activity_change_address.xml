<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/space_16"
    tools:context=".ui.view.ChangeAddressActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_24"
        android:layout_marginTop="@dimen/space_16">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_back"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ubah Alamat"
            android:gravity="center"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/space_8"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Label Alamat"
                android:layout_marginBottom="@dimen/space_10"
                android:fontFamily="@font/nunito_bold"
                android:layout_height="wrap_content"/>
            <EditText
                android:paddingHorizontal="@dimen/space_16"
                android:paddingVertical="@dimen/space_10"
                android:layout_width="@dimen/space_180"
                android:hint="Contoh: Alamat Kantor"
                android:textSize="@dimen/font_body_xs_size"
                android:background="@drawable/bg_rounded_edit_profile"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/space_8"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Nama Penerima"
                android:layout_marginBottom="@dimen/space_10"
                android:fontFamily="@font/nunito_bold"
                android:layout_height="wrap_content"/>
            <EditText
                android:paddingHorizontal="@dimen/space_16"
                android:paddingVertical="@dimen/space_10"
                android:layout_width="@dimen/space_180"
                android:hint="Masukkan nama penerima"
                android:textSize="@dimen/font_body_xs_size"
                android:background="@drawable/bg_rounded_edit_profile"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/space_16"
        android:fontFamily="@font/nunito_bold"
        android:text="Nomor Handphone"
        android:layout_marginBottom="@dimen/space_10"
        android:layout_height="wrap_content"/>
    <EditText
        android:paddingHorizontal="@dimen/space_16"
        android:paddingVertical="@dimen/space_10"
        android:layout_width="match_parent"
        android:hint="Masukkan nomor hp penerima"
        android:textSize="@dimen/font_body_xs_size"
        android:background="@drawable/bg_rounded_edit_profile"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_16"
        android:paddingBottom="@dimen/space_16"
        android:src="@drawable/line_horizontal" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/space_16"
        android:fontFamily="@font/nunito_bold"
        android:text="Detail Alamat"
        android:layout_marginBottom="@dimen/space_10"
        android:layout_height="wrap_content"/>
    <EditText
        android:paddingHorizontal="@dimen/space_16"
        android:paddingVertical="@dimen/space_40"
        android:layout_width="match_parent"
        android:hint="Masukkan detail alamat lengkap (Nama jalan, gedung, blok, no. rumah)"
        android:textSize="@dimen/font_body_xs_size"
        android:background="@drawable/bg_rounded_edit_profile"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_16"
        android:background="@drawable/rounded_white_grey"
        android:padding="@dimen/space_4"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_16"
            android:text="Provinsi, Kabupaten / Kota"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/font_body_s_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_160"
            android:layout_marginTop="@dimen/space_20"
            android:background="@drawable/ic_next" />
    </LinearLayout>
</LinearLayout>