<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/space_16"
    android:orientation="vertical"
    tools:context=".ui.view.ChangeAddressActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_16"
        android:layout_marginBottom="@dimen/space_24">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:gravity="center"
            android:text="Ubah Alamat"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_8"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_10"
                android:fontFamily="@font/nunito_bold"
                android:text="Label Alamat" />

            <EditText
                android:id="@+id/edt_labelAlamat"
                android:layout_width="@dimen/space_180"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_edit_profile"
                android:hint="Contoh: Alamat Kantor"
                android:paddingHorizontal="@dimen/space_16"
                android:paddingVertical="@dimen/space_10"
                android:textSize="@dimen/font_body_xs_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_8"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_10"
                android:fontFamily="@font/nunito_bold"
                android:text="Nama Penerima" />

            <EditText
                android:id="@+id/edt_label_penerima"
                android:layout_width="@dimen/space_180"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_edit_profile"
                android:hint="Masukkan nama penerima"
                android:paddingHorizontal="@dimen/space_16"
                android:paddingVertical="@dimen/space_10"
                android:textSize="@dimen/font_body_xs_size" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_16"
        android:layout_marginBottom="@dimen/space_10"
        android:fontFamily="@font/nunito_bold"
        android:text="Nomor Handphone" />

    <EditText
        android:id="@+id/edt_nomor_hp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_edit_profile"
        android:hint="Masukkan nomor hp penerima"
        android:paddingHorizontal="@dimen/space_16"
        android:paddingVertical="@dimen/space_10"
        android:textSize="@dimen/font_body_xs_size" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_16"
        android:paddingBottom="@dimen/space_16"
        android:src="@drawable/line_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_16"
        android:layout_marginBottom="@dimen/space_10"
        android:fontFamily="@font/nunito_bold"
        android:text="Detail Alamat" />

    <EditText
        android:id="@+id/edt_detailAlamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_edit_profile"
        android:hint="Masukkan detail alamat lengkap (Nama jalan, gedung, blok, no. rumah)"
        android:paddingHorizontal="@dimen/space_16"
        android:paddingVertical="@dimen/space_40"
        android:textSize="@dimen/font_body_xs_size" />

    <RelativeLayout
        android:id="@+id/pilih_provinsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_16"
        android:background="@drawable/rounded_white_grey"
        android:orientation="horizontal"
        android:padding="@dimen/space_4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/space_16"
            android:layout_marginTop="@dimen/space_16"
            android:layout_marginEnd="@dimen/space_16"
            android:layout_marginBottom="@dimen/space_16"
            android:text="Provinsi"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/font_body_s_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/space_20"
            android:layout_marginEnd="@dimen/space_16"
            android:background="@drawable/ic_next" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pilih_kota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_16"
        android:background="@drawable/rounded_white_grey"
        android:orientation="horizontal"
        android:padding="@dimen/space_4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/space_16"
            android:layout_marginTop="@dimen/space_16"
            android:layout_marginEnd="@dimen/space_16"
            android:layout_marginBottom="@dimen/space_16"
            android:text="Kabupaten / Kota"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/font_body_s_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/space_20"
            android:layout_marginEnd="@dimen/space_16"
            android:background="@drawable/ic_next" />
    </RelativeLayout>
</LinearLayout>