<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:toosl="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="@dimen/space_16"
    android:layout_margin="@dimen/space_8"
    android:background="@drawable/item_pengiriman"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_kurir_item"
        android:layout_width="@dimen/space_32"
        android:layout_height="@dimen/space_28"
        android:layout_marginStart="@dimen/space_19"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        toosl:src="@drawable/ic_lotus" />

    <TextView
        android:id="@+id/tv_kurir_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_12"
        android:fontFamily="@font/nunito"
        android:textColor="@color/md_black_1000"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_kurir_item"
        app:layout_constraintStart_toEndOf="@+id/img_kurir_item"
        app:layout_constraintTop_toTopOf="@+id/img_kurir_item"
        toosl:text="Angel@uuiui.com" />

    <ImageView
        android:layout_width="@dimen/space_10"
        android:layout_height="18dp"
        android:layout_marginEnd="18dp"
        android:src="@drawable/img_cart_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>