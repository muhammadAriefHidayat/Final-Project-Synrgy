<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:toosl="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/img_profil_item"
        android:layout_width="14dp"
        android:layout_marginStart="@dimen/space_19"
        android:layout_height="12dp"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="fitXY"
        toosl:src="@drawable/ic_lotus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_12"
        android:fontFamily="@font/nunito"
        android:text="Angel@uuiui.com"
        android:textColor="@color/md_black_1000"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_profil_item"
        app:layout_constraintStart_toEndOf="@+id/img_profil_item"
        app:layout_constraintTop_toTopOf="@+id/img_profil_item" />

    <ImageView
        android:src="@drawable/img_cart_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="18dp"
        android:layout_width="@dimen/space_10"
        android:layout_height="18dp"/>

    <View
        android:id="@+id/line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/darkBrown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>