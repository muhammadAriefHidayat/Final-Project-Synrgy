<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.apps.finalproject">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".utils.SharePrefApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FinalProject"
        tools:targetApi="31">
        <activity
            android:name=".view.DetailProdukActivity"
            android:exported="false" />
        <activity
            android:name=".view.PaymentPages"
            android:exported="false" />
        <activity
            android:name=".view.PaymentActivity"
            android:exported="false" />
        <activity
            android:name=".view.ArticleActivity"
            android:exported="false" />
        <activity
            android:name=".view.HomePageActivity"
            android:exported="false" />
        <activity
            android:name=".view.AuthActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>